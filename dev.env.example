# Development Environment Configuration for Atoms MCP
# Copy this to .env for your development setup

# Supabase Configuration (Your Private Dev Account)
NEXT_PUBLIC_SUPABASE_URL=https://your-dev-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-dev-supabase-anon-key

# FastMCP Development Server Configuration
ATOMS_FASTMCP_TRANSPORT=http
ATOMS_FASTMCP_HOST=127.0.0.1
ATOMS_FASTMCP_PORT=8000
ATOMS_FASTMCP_BASE_URL=http://127.0.0.1:8000

# OAuth Configuration (Development)
OAUTH_CLIENT_ID=atoms-mcp-dev-client
OAUTH_CLIENT_SECRET=atoms-mcp-dev-secret

# Demo Authentication (Optional - for testing without Supabase)
FASTMCP_DEMO_USER=dev@example.com
FASTMCP_DEMO_PASS=dev123

# Logging Level
LOG_LEVEL=DEBUG
