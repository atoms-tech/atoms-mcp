{
  "version": 2,
  "buildCommand": "bash build.sh",
  "functions": {
    "app.py": {
      "maxDuration": 60,
      "memory": 3008
    }
  },
  "routes": [
    {
      "src": "/health",
      "dest": "app.py",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/api/mcp",
      "dest": "app.py",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/auth/complete",
      "dest": "app.py"
    },
    {
      "src": "/.well-known/(.*)",
      "dest": "app.py"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "ATOMS_FASTMCP_TRANSPORT": "http",
    "ATOMS_FASTMCP_HTTP_PATH": "/api/mcp",
    "PYTHONPATH": "pheno_vendor",
    "PRODUCTION": "true"
  },
  "github": {
    "silent": true
  },
  "alias": ["mcp.atoms.tech", "devmcp.atoms.tech"]
}
