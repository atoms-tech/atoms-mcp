#!/usr/bin/env python3
"""
Atoms MCP Entry Point - CLI Interface
=====================================

Main entry point that delegates to the atoms_cli.py interface.

Usage:
    ./atoms sync                    # Sync dependencies with pheno-sdk
    ./atoms start                   # Start MCP server
    ./atoms orchestrate --dev       # Use orchestration launcher
    ./atoms --help                  # Show help
"""

import sys
from pathlib import Path

# Add project root to path
project_root = Path(__file__).parent
sys.path.insert(0, str(project_root))

# Import and run the CLI
from atoms_cli import main

if __name__ == "__main__":
    sys.exit(main())
