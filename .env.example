# Atoms MCP Production Configuration
# Copy to .env and fill in your values

# ============================================================================
# Server Configuration
# ============================================================================
ENVIRONMENT=local
LOG_LEVEL=info
DEBUG=false

# ============================================================================
# KINFRA Infrastructure Configuration
# ============================================================================
# Enable KINFRA port allocation and management
ZEN_KINFRA_MANAGED=1
ZEN_KINFRA_TUNNEL=0          # Set to 1 for CloudFlare tunnel to atomcp.kooshapari.com
ZEN_KINFRA_FALLBACK=1        # Enable fallback pages
ZEN_KINFRA_RESTART=1         # Auto-restart on failure

# ============================================================================
# FastMCP Configuration
# ============================================================================
ATOMS_FASTMCP_TRANSPORT=http
ATOMS_FASTMCP_HOST=127.0.0.1
ATOMS_FASTMCP_PORT=8000
ATOMS_FASTMCP_BASE_URL=https://atomcp.kooshapari.com
ATOMS_FASTMCP_HTTP_PATH=/api/mcp
ATOMS_FASTMCP_RELOAD=false
ATOMS_FASTMCP_HTTP_AUTH_MODE=optional

# ============================================================================
# Authentication Configuration (REQUIRED)
# ============================================================================
# AuthKit domain for authentication provider
# Get this from your AuthKit dashboard
FASTMCP_SERVER_AUTH_AUTHKITPROVIDER_AUTHKIT_DOMAIN=your-authkit-domain.authkit.com

# Optional: AuthKit required scopes (comma-separated)
FASTMCP_SERVER_AUTH_AUTHKITPROVIDER_AUTHKIT_REQUIRED_SCOPES=openid,profile,email

# ============================================================================
# API Keys
# ============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
OPENROUTER_API_KEY=sk_live_...
GROQ_API_KEY=gsk_...

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/atoms_mcp
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_CACHING=true
ENABLE_STREAMING=true
ENABLE_TOOL_USE=true
ENABLE_LOGGING=true

# ============================================================================
# Tool Configuration
# ============================================================================
TOOLS_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# ============================================================================
# Observability
# ============================================================================
ENABLE_PROFILING=false
ENABLE_TRACING=false
TELEMETRY_ENABLED=false
